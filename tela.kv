BoxLayout:
    orientation:'vertical'
    size: (200, 400)

    GridLayout:
        size_hint: (1, 0.5)
        cols: 1
        Label:
            id: operacao
            halign: 'right'
            readonly : True
            text: ''
            foreground_color: [255,255,255, 1]
            font_size: 20

        TextInput:
            id: input
            multiline:False
            padding_x: [(self.width-6) - (self._get_text_width((self.text*2), self.tab_width, self._label_cached)) / 2.0, 0]
            font_size: 50
            foreground_color: [255,255,255, 1]
            background_color: [0,0,0,0.3]
            input_filter: 'float'


    GridLayout:
        padding: [2,2,2,2]
        size: (200, 300)
        cols: 4
        Button:
            text: '%'
            background_color: [1,1,1,0.3]
        Button:
            id: ce
            text: 'CE'
            background_color: [1,1,1,0.3]
        Button:
            id: c
            text: 'C'
            background_color: [1,1,1,0.3]
        Button:
            id: back
            text: '<'
            background_color: [1,1,1,0.3]
        Button:
            id: umSobreX
            font_size: 12
            text: ' 1\n----\n X'
            background_color: [1,1,1,0.3]
        Button:
            id: elevacaopor2
            text: 'X²'
            background_color: [1,1,1,0.3]
        Button:
            text: '√x'
            background_color: [1,1,1,0.3]
        Button:
            id: divisao
            text: '/'
            background_color: [1,1,1,0.3]
        Button:
            id: 7
            text: '7'
            background_color: [0,0,0,1]
        Button:
            id: 8
            text: '8'
            background_color: [0,0,0,1]
        Button:
            id: 9
            text: '9'
            background_color: [0,0,0,1]
        Button:
            id: multiplicacao
            text: 'X'
            background_color: [1,1,1,0.3]
        Button:
            id: 4
            text: '4'
            background_color: [0,0,0,0.9]
        Button:
            id: 5
            text: '5'
            background_color: [0,0,0,0.9]
        Button:
            id: 6
            text: '6'
            background_color: [0,0,0,0.9]
        Button:
            id: subtracao
            text: '-'
            background_color: [1,1,1,0.3]
        Button:
            id: 1
            text: '1'
            background_color: [0,0,0,0.9]
        Button:
            id: 2
            text: '2'
            background_color: [0,0,0,0.9]
        Button:
            id: 3
            text: '3'
            background_color: [0,0,0,0.9]
        Button:
            id: soma
            text: '+'
            background_color: [1,1,1,0.3]
        Button:
            text: '+/-'
            background_color: [0,0,0,0.9]
        Button:
            id: 0
